<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.babysitter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BabySitter">
        <activity
            android:name=".activity.BabySitterAddActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main_parents"
            android:theme="@style/Theme.BabySitter.NoActionBar" />
        <activity
            android:name=".activity.EmailSignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.BabySitter.NoActionBar" />
        <activity
            android:name=".activity.EmailSignInActivity"
            android:exported="false"
            android:theme="@style/Theme.BabySitter.NoActionBar" />
        <activity
            android:name=".activity.SignupOptionsActivity"
            android:exported="false"
            android:theme="@style/Theme.BabySitter.NoActionBar" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.BabySitter.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserChoiceActivity"
            android:exported="false"
            android:theme="@style/Theme.BabySitter.NoActionBar" />
    </application>

    <queries>
        <provider android:authorities="com.facebook.katana.provider.PlatformProvider" /> <!-- allows app to access Facebook app features -->
        <provider android:authorities="com.facebook.orca.provider.PlatformProvider" /> <!-- allows sharing to Messenger app -->
    </queries>
</manifest>